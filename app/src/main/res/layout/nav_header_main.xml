<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="172dp"
    android:background="@drawable/drawer_patt"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_25">

    <ImageView android:layout_width="80dp" android:layout_height="@dimen/dp_80"
        android:paddingTop="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:src="@drawable/photo" android:id="@+id/imageView" />

    <TextView
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_88"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textStyle="bold"
        android:paddingLeft="@dimen/dp_16"
        android:textColor="#FFFFFF"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/textView"
        android:paddingTop="@dimen/dp_105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:paddingLeft="@dimen/dp_16"
        android:textColor="#FFFFFF"
        android:typeface="sans"/>

</RelativeLayout>

