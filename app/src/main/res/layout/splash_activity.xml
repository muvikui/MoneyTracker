<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
     android:layout_width="match_parent" style="@style/AppTheme">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/splash_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money Tracker"
        android:layout_gravity="center_horizontal|top"
        android:layout_margin="@dimen/fab_margin"
        android:textSize="24dp"
        android:textStyle="bold"/>

</FrameLayout>